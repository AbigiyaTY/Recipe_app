<div class="container bgc1 my-5">
    <div class="row">
      <div class="col py-3">
          <h2><%= link_to recipe.name, recipe_path(id: recipe.id), class: "text-decoration-none" %></h2>
      </div>
      <div class="col  py-3">
        <p>Description for the recipe</p>
      </div>
    </div>
    <div class="row">
      <div class="col  py-3">
        <%= button_to "Remove" , recipe_path(id: recipe.id), method: :delete, class: "btn btn-danger" %>
      </div>
      <div class="col">
        <p><%= recipe.description %></p>
      </div>
    </div>
</div>
