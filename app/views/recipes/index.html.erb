<div >
  <h1>Recipe List</h1>
  <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-success" %>
  <% @recipes.each do |recipe| %>
    <%= render partial: 'recipes/recipe_card', locals: { recipe: recipe, user_id: recipe.id } %>
  <% end %>
  <% if @recipes.empty? %>
    <h1>There are no public recipes to show</h1>
  <% end %>

</div>